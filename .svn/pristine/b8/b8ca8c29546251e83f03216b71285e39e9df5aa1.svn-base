// new try css

.service-section {
  margin-top: 100px;
  position: relative;

  padding: clamp(60px, 10vw, 150px) 5vw;
  background: transparent;
}

.section__title {
  color: #6A28BA;
  font-size: clamp(1.5rem, 2.5vw, 2.2rem);
  font-weight: 700;
  margin-bottom: 1rem;
}

h1 {
  z-index: auto;
}

.services-slider {
  display: flex;
  overflow-x: auto;
  scroll-behavior: smooth;
  // gap: 20px;
  padding: 10px 0;
  margin-top: 30px;
  min-height: 300px;

  scrollbar-width: none; // Firefox
  -ms-overflow-style: none; // IE

  &::-webkit-scrollbar {
    display: none; // Chrome/Safari
  }
}

.ser-box {
  flex: 0 0 32%;
  // max-width: 32%;
  // padding: 24px;
  border-radius: 5px;
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  min-height: 300px;
  // background-color: #fff;
  // box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);

  &:hover {
    transform: translateY(-6px);
  }

  h4 {
    font-size: 1.2rem;
    margin: 16px 0 10px;
    font-weight: 700;
    color: #1a1a1a;
  }

  p {
    font-size: 0.95rem;
    color: #555;
    line-height: 1.5;
  }

  .ser-box-img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
}

// Section Wrapper
.service-section {
  padding: 80px 0;

  .section__text {
    margin-top: 16px;
    color: #444;
    font-size: 1rem;
  }

  .serv-navigation {
    margin-top: 24px;
    display: flex;
    gap: 10px;
    cursor: pointer;

    button {
      width: 40px;
      height: 40px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: transparent;
      font-size: 18px;
      cursor: pointer;

      i {
        color: #5c2d91;
      }

      &:hover {
        //  background-color: #f2f2f2;
      }
    }
  }


  // Card backgrounds
  .bg-1 {
    // background: linear-gradient(135deg, #CEDFFF 0%, #DDC9FF 100%);
    background-image: url("/assets/images/service-1.png");
  }

  .bg-2 {
    // background: linear-gradient(135deg, #D3E5F3 0%, #83DEFF 100%);
    background-image: url("/assets/images/service-2.png");
  }

  .bg-3 {
    // background: linear-gradient(135deg, #FFF0E2 0%, #FFB09C 100%);
    background-image: url("/assets/images/service-3.png");
  }

