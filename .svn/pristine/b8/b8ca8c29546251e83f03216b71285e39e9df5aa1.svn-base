  .bg-4  {
  position: relative;
  overflow: hidden; 
  z-index: 1;
  background: linear-gradient(135deg, #ffe2e2, #ffcccc);
}
.bg-4::before {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;

  background-image: url('/assets/images/card-bg.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;

  z-index: -1; 
  opacity: 1;
}

  .bg-5  {
  position: relative;
  overflow: hidden; 
  z-index: 1;
  background: linear-gradient(135deg, #ccf2e6, #b2e6d5);
}
.bg-5::before {
