.services-slider .ser-box {
  position: relative;
  overflow: hidden;
  /* Ensure the pseudo-element stays within bounds */
}

.services-slider .ser-box:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  // background: url('/assets/images/card-bg.png');
  background-position: right bottom;
  background-size: cover;
  z-index: 9;
  transition: transform 0.5s ease, background-position 0.5s ease;
}




