//
// Responsive Breakpoints
//

@media (min-width: 992px) {
    .col-lg-7 {
        margin-top: 12vh;
        flex: 0 0 auto;
        width: 58.33333333%;
    }
  }

@media (max-width: 992px) {
  .ser-box {
    flex: 0 0 48%;
    max-width: 48%;
  }
}

@media (max-width: 768px) {
  .ser-box {
    flex: 0 0 100%;
    max-width: 100%;
  }

  .serv-navigation {
    justify-content: flex-start;
  }
}

@media (max-width: 480px) {
  .section__title {
    font-size: 1.5rem;
  }

  .ser-box {
    padding: 16px;
  }

  .ser-box h4 {
    font-size: 1rem;
  }

  .ser-box p {
    font-size: 0.9rem;
  }

  .serv-navigation button {
    width: 36px;
    height: 36px;
    font-size: 16px;
  }
}




