/* ========== MOBILE (â‰¤700px) ========== */
@media (max-width: 700px) {
  .ready-sec {
    padding: 40px 20px 60px;
    background-size: cover;
    background-position: center top;
  }
  .col-lg-5{
    align-items: left !important;
  }

  .main-sec-head {
    font-size: 24px !important;
    font-weight: 500 !important;
  }
  .col-lg-7 {
    margin-top: 40px;
    width: 100% !important;
    padding: 0 10px;
  }

  .ready-sec p {
    width: 100% !important;
    margin-top: 20px;
    text-align: left;
  }

  .form-box {
    margin-left: 0 !important;
    width: 100% !important;
    height: auto;
    padding: 20px 15px;
    border-radius: 15px;
  }

  .form-box .form-control {
    width: 100% !important;
    height: 45px;
    padding: 0 12px;
    line-height: normal;
  }

  .form-box textarea.form-control {
    height: 100px;
    margin-bottom: 15px;
  }

  .form-box button {
        display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 50px;
    border-radius: 30px;
    // padding: 0 20px;
    // margin-top: 10px;
  }

  .img-fluid {

    margin-left: 15px;
    width: 30px;
    height: 12px;
    margin-top: -10px;
  }
}

/* ========== TABLET (701px - 1000px) ========== */
@media (min-width: 701px) and (max-width: 1000px) {
  .col-lg-5,
  .col-lg-7 {
    margin-top: 60px;
  }

  .form-box {
    margin-left: 50px;
    width: 100% !important;
    max-width: 600px;
    height: auto;
  }

  .form-box .form-control {
    width: 100% !important;
    height: 55px;
  }

  .form-box textarea.form-control {
    height: 120px;
  }

  .form-box button {
    height: 55px;
    padding: 0 30px;
  }

  .img-fluid {
    width: 22px;
    height: 13px;
    margin-left: 20px;
  }
}
