    .pholder {
  font-family: "Oswald", sans-serif;
  font-weight: 400;
  font-size: 150px;
  position: absolute;
  letter-spacing: 20px;
  text-transform: uppercase;
  color: #eff0f1d9;
  text-decoration: uppercase;
  top: -78px;
  z-index: -1;
}


footer .pholder {
  letter-spacing: 0;
  z-index: -9;
  color: rgb(235 241 247);
  opacity: 1;
  text-transform: uppercase;
  padding-left: 0;
  bottom: -129px;
  top: inherit;
}

footer img {
  margin-bottom: 35px;
  z-index: 9;
}

footer h4 {
  font-family: 'Geist', sans-serif !important;
  font-size: 45px;
  color: #000000;
}

footer .col-lg-4 h4 {
  font-size: 30px;
  font-weight: 600;
  font-family: 'Geist', sans-serif !important;
  letter-spacing: 6%;
}

footer ul.cont-add {
  color: #000000;
  font-weight: 200;
  line-height: 20px;
  margin-top: 30px;
}


.email {
  color: #4D1AA8 !important;
  text-decoration: none;

  &:hover {
    color: darkviolet; 
    text-decoration: underline; 
  }
}


footer li a {
  font-weight: 300;
  // color: #4D1AA8 !important;
}

.footer-social {
  margin-top: 50px;
}

.footer-social li a i {
  height: 50px;
  width: 50px;
  float: left;
  border: 1px solid rgba(150, 183, 255, 1);
  background: rgba(233, 240, 255, 1);
  font-size: 28px;
  color: #fff;
  line-height: 50px;
  text-align: center;
  border-radius: 100%;
}

.footer-social li a i.fa-facebook-f {
  color: rgba(36, 97, 227, 1);
}

.footer-social li a i.fa-x-twitter {
  color: #000000;
}

.footer-social li a i.fa-linkedin-in {
  color: rgba(44, 142, 255, 1);
}

.footer-social li a i.fa-instagram {
  color: rgba(255, 0, 43, 1);
  border: 1px solid rgba(226, 163, 255, 1);
  background: rgba(241, 228, 255, 1);
}

.footer-social li a i.fa-youtube {
  color: rgba(255, 0, 0, 1);
  background: rgba(255, 169, 169, .5);
  border: 1px solid rgba(255, 234, 234, 1);
}

.cont-add li {
  font-size: 20px;
  // line-height: 30px;
  font-weight: 300;
    // font-size: 20px;
  font-family: 'Geist', sans-serif !important;
      // font-weight: 100;
      filter: contrast(0.8);
}
.q-link {
  margin-top: 30px;
}

.q-link li {
  margin-bottom: 15px;
}

.q-link li a {
  font-family: 'Geist', sans-serif !important;
  text-decoration: none;
  font-size: 22px;
  line-height: 30px;
  font-weight: 300;
  color: rgba(0, 0, 0, 1);
}

.q-link li a:hover {
  color: #4D1AA8;
}

.hire {
  // background: linear-gradient(15deg, #7020D2 0%, #249782 17%, #025782 51%, #11803F 100%);
  background: linear-gradient(113deg,#249782 17% ,#025782 51% ,#11803F 100%);
  height: 40px;
  margin-left: 15px;
  padding: 0 15px;
  font-size: 16px;
  line-height: 40px;
  border-radius: 5px;
  display: inline-block;
  color: #FFF;
}
.copy-right {
  border-top: 1px solid #bfbfbf;
  line-height: 80px;
  height: 80px;
  font-weight: 100;
  position: absolute;
  top: 74px;
}

.copy-right li,
.copy-right li a {
  font-size: 20px;
  color: #000000;
  font-weight: 300;
  text-decoration: none;
  font-family: 'Geist', sans-serif !important;
}

.copy-right li:last-child {
  gap: 20px;
}

    .copy-right {
        line-height: 20px;
    }


    ul.list-unstyled.d-flex.flex-column.flex-md-row.justify-content-md-between.mob-ft-ul {
        margin-top: 44px;
        font-family: 'Geist', sans-serif !important;
    }



.footer-location {
  display: flex;
  align-items: flex-start;   /* icon stays at top of text block */
  list-style: none;          /* remove default list style */
}

.footer-location .footer-email .footer-phone i {
  gap: 25px;
  margin-right: 10px;         /* space between icon and text */
  flex-shrink: 0;            /* icon wonâ€™t shrink */
}

.location-footer {
  flex: 1;                   /* text takes remaining width */
}
