.serBox {
  padding: 15px 15px;
  // background: #1c1c1c;
  padding: 20px;
  border-radius: 10px;
  // text-align: center;
  // color: #F5EAE0;
  color: #333;
  font-style: normal;
}

.serBox:after {
  display: block;
  content: '';
  border-bottom: solid 3px #f24e1e;
  transform: scaleX(0);
  transition: transform 300ms ease-in-out;
}

.serBox:hover:after {
  transform: scaleX(0);
}

.img-box {
  margin-left: 15px;
  margin-bottom: 15px;
  height: 90px;
  width: 90px;
  position: relative;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  margin-bottom: 30px;
}

.img-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: -15px;
  background: #F5EAE0;
  height: 80px;
  width: 80px;
  border-radius: 50px;
  z-index: -1;
}

