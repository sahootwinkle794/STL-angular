// NEW UPDATE

.services-carousel-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  width: 100%;
  position: relative;
  margin-top: 50px;



   
  

  .arrow-btn {
    cursor: pointer;
  }

  .services-carousel {
    display: flex;
    gap: 30px;
    overflow: hidden;
    max-width: 100%;

    .service-card {
      flex: 0 0 calc(25% - 22.5px); // 4 cards per view with 30px gap
      min-width: 250px;
      max-width: 400px;
      height: 320px;
      box-sizing: border-box;
      transition: transform 0.3s ease;
      overflow: visible;

      position: relative;
      display: flex;
      flex-direction: column;

      img {
        width: 88.53px;
        height: 100px;
        margin-bottom: 15px;
        object-fit: contain;
        margin-top: 10px;
        margin-left: 20px;
        z-index: 2;
      }

      h3 {
        font-family: 'Geist', sans-serif !important;
        // font-style: semibold;
        font-size: 26px;
        font-weight: 410;
        // margin-bottom: 10px;
        margin-bottom: 20px;
        color: #000000;
      }

      p {
        font-family: 'Outfit', sans-serif !important;
        font-size: 18px;
        // color: #555;
        flex-grow: 1;
        height: 60px;
        // height: auto;
        // width: 220px;
        // padding: 10px;
        width: auto;
        font-weight: 500;
        overflow: hidden;
        text-overflow: ellipsis;
        padding: 0;
        margin: 0;
        // overflow: visible;
      }

      &:hover {
        transform: translateY(-5px);
      }
    }
  }
}



