//  this is the banner section


/* Background video */
.bg-video {
  position: absolute;
  top: 0;
  left: 0;
  // width: 100vw;
  // height: 120vh;
  height: 120%;
  width: 100%;
  object-fit: cover;
  z-index: 0;
  pointer-events: none;
  transform: scaleX(-1);


   object-fit: cover;


    //  transform: scaleX(-1) scale(1); 
  transform-origin: center;
  transition: transform 0.5s ease;
}

/* Banner content */
.banner-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  // margin-top: 20vh;
  margin-top: 120px;
  padding-left: 5vw;
  opacity: 0;
  transform: translateX(100%);
  animation: slideInFromRight 1s forwards;
  animation-delay: 0.5s;
}

/* Slide-in animation */
@keyframes slideInFromRight {
  0% {
    opacity: 0;
    transform: translateX(100%);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Titles */
.banner-title {
  font-family: 'Geist', sans-serif;
  // font-size: 6vw;
  font-size: 80px;
  font-weight: 250;
  // margin-bottom: 10px;

}

.banner-subtitle {
  font-family: 'Geist', sans-serif;
  font-size: 80px;
  opacity: 0;
  transform: translateX(100%);
  animation: slideInFromRight 1s forwards;
  animation-delay: 0.6s;
  font-weight: 600;
}


