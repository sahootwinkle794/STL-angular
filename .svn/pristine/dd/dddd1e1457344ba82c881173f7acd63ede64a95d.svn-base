.job-opening{
    margin-top: 100px;
}

.explore-header {
  background-color: #2c2f36;
  color: white;
  padding: 40px;
}

.explore-header p {
  margin: 0;
  font-size: 14px;
  color: #cccccc;
}

.explore-header h1 {
  margin: 10px 0 0;
  font-size: 32px;
}

.explore-container {
  display: flex;
  padding: 40px;
  background: #f8f9fa;
}

.filter-section {
  width: 30%;
  padding-right: 40px;
}

.filter-section input {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
}

.filter-category p {
  margin-bottom: 10px;
}

.filter-category button {
  display: block;
  width: 100%;
  background: white;
  border: 1px solid #ccc;
  padding: 8px;
  margin-bottom: 10px;
  text-align: left;
  cursor: pointer;
}

.job-list {
  width: 70%;
}

.job-box {
  background: white;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
  display: flex;
  justify-content: space-between;
  border: 1px solid #ddd;
}
