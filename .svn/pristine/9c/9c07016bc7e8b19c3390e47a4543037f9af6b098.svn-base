// global section
.global-presence {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
//   padding: 60px 40px;
  background: #daebee;
  gap: 40px;
  flex-wrap: wrap;
  font-family: 'Segoe UI', sans-serif;
}

.left-section {
    padding-left: 120px;
    padding-top: 70px;
  flex: 1 1 40%;
}

.left-section h2 {
  font-size: 3rem;
  font-weight: 200;
  line-height: 1.3;
  color: #3d6d80;
}

.left-section h2 span {
  font-weight: 700;
  color: #1e5f9c;
}

.cta-button {
  display: inline-block;
  margin: 25px 0;
  padding: 14px 24px;
  // background-color: #2391d1;
  background: linear-gradient(#00A1E4 0%,#00597E 100%);
  color: #ffff;
  border-radius: 30px;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.cta-button:hover {
  background-color: #004a99;
}

.cta-button .arrow {
  margin-left: 10px;
}

.subtext {
  max-width: 400px;
  font-size: 0.95rem;
  color: #070404;
}

.right-section {
    background-color: #fff;
  flex: 2 2 55%;
  position: relative;
}

.right-section h4 {
    padding-top: 15px;
    padding-left: 7px;
  margin-bottom: 20px;
  font-size: 1.1rem;
  color: #111;
  font-weight: 500;
}

.map-container {
  position: relative;
  background-color: #d8d5d5;
  width: 100%;
}

.map-container img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
}

/* Map Dots */
.map-dot {
  position: absolute;
  font-size: 0.9rem;
  font-weight: bold;
  color: #000;
}

.map-dot::before {
  content: '';
  display: inline-block;
  width: 10px;
  height: 10px;
  background: #0a66c2;
  border-radius: 50%;
  margin-right: 6px;
}

/* Manually position dots (adjust as needed) */
.map-dot.usa {
  top: 35%;
  left: 12%;
}

.map-dot.dubai {
  top: 55%;
  left: 45%;
}

.map-dot.india {
  top: 42%;
  left: 60%;
}
