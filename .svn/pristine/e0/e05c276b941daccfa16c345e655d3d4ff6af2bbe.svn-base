@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap');


.ondemand-section {
  display: flex;
  position: relative;
  // background-image: url('/assets/on-demand.png'); 
  background-image: url('/assets/images/onDemand-bg.svg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;

  // width: 1920px;
  // height: 930px;
  width: 100%;
  height: 100vh;
  // height: 930px;
  color: #000;
  min-height: 400px;
  // max-height: 100%;
  align-items: center;

  &::before {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 1;
  }
}

.text-overlay {
  position: relative;
  z-index: 2;
  padding: 60px 30px;
  width: 100%;
  margin-top: -80px;
}

.ondemand-flex-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40px;
  flex-wrap: nowrap;
  position: relative;

  .arrow-left,
  .arrow-right {
    flex-shrink: 0;

  }

  .arrow-left {
    margin-right: 40px;
    transform: translateY(10px); 
  }

  .arrow-right {
    margin-left: 40px;  
    transform: translateY(10px); 
  }
  .arrow-left,
  .arrow-right:hover{
    cursor: pointer;
  }

  .ondemand-section-content {
    // max-width: 1000px;
    text-align: left;

    .ondemand-title {
      font-family: 'Geist', sans-serif !important;
      font-size: 60px;
      font-weight: 300;
      margin-bottom: 10px;
      font-weight: 100;
    }

    .ondemand-subtitle {
      font-family: 'Geist', sans-serif !important;
      font-size: 55px;
      font-weight: 700;
      margin-bottom: 30px;
    }

    .ondemand-points {
      font-size: 14px;
      line-height: 1.6;
      margin-bottom: 30px;

      p {
        font-family: 'Outfit', sans-serif !important;
        margin-bottom: 12px;
        font-size: 24px;

        i {
          color: #000;
          margin-right: 8px;
          // font-size: 15px;
          height: 18px;
          width: 18px;
        }
      }
      
    }

    .ondemand-btn {
      margin-top: 20px;
      padding: 18px 35px;
      border-radius: 40px;
      font-size: 22px;
      font-family: "Roboto", sans-serif;
      background: linear-gradient(171deg, #0A47B9 0% , #763289 100%);
      color: white;
      border: none;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
      display: inline-flex;
      align-items: center;
      gap: 10px;
      cursor: pointer;
    }

    .ondemand-progress-bar {
      margin-top: 40px;
      height: 4px;
      // background: linear-gradient(to right, #6A28BA 40%, #D1C4E9 40%);
      background-color:#D1C4E9;
      border-radius: 2px;
    }
  }
}



