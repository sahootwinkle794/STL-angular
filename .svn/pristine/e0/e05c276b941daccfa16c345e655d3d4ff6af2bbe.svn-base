.ondemand-progress-bar {
  width: 100%;
  height: 10px;
  display: flex;
  cursor: pointer;
  justify-content: center;
  align-items: center;
  // border: 1px solid #000; /* optional */
}

.progress-half {
  width: 50%;
  // height: 100%;
  height: 1px;
  background-color: transparent;
  transition: background-color 0.01s;
}

.progress-half.active {
  height: 6px;
  background-color: #6A28BA;
}