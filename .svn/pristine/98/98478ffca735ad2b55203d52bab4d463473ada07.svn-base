.why-stl {
  padding: 60px 20px;
  background-color: #ffffff;
  color: #1a1a1a;
}

.why-stl .container {
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}

.why-stl .main-title {
  font-size: 4rem;
  font-weight: 700;
  margin-bottom: 50px;
  color: #1a1a1a;
}

.why-stl .features {
  display: grid;
  grid-template-columns: 1fr;
  gap: 30px;
}

@media (min-width: 768px) {
  .why-stl .features {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 100px) {
  .why-stl .features {
    grid-template-columns: repeat(3, 1fr);
  }
}

.why-stl .feature {
  display: flex;
  align-items: flex-start;
  text-align: left;
  gap: 15px;
  padding: 10px;
}

.why-stl .icon-wrapper {
  flex-shrink: 0;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background-color: #f1f6fa;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}
img{
    height: 100px;
    width: 5px;
}

.why-stl .feature-icon {
  width: 62px;
  height: 64px;
}

.why-stl .text-content {
  flex: 1;
}

.why-stl .feature-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #007bff;
  margin-bottom: 5px;
}

.why-stl .feature-text {
  font-size: 0.95rem;
  color: #555555;
  line-height: 1.6;
}


