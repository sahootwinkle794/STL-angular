@media only screen and (min-width:300px) and (max-width:800px){


  .ondemand-section {
  margin-top: -70px;
  display: flex;
  position: relative;
  background-image: url('../../../../public/assets/images/onDemand-bg.svg');
  background-size: cover;
  background-repeat: no-repeat;

  // width: 100%;
  width: fit-content;
  min-height: 400px;
  height: 600px; /* or use 100vh, or fixed px height */
  color: #000;
  align-items: center;

  &::before {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 1;
  }
}


.ondemand-section {
  // margin-top: 10px;
    // padding: 10px;
    // text-align: center;
  }

  .ondemand-flex-wrapper {
    flex-direction: column;
    align-items: center;
  }

  .arrow-left, .arrow-right {
   display: none;
  }

  .ondemand-title {
    // margin-top: -300px;
    font-size: 40px;
  }

  .ondemand-subtitle {
    font-size: 30px;
  }

  .text-overlay {
  position: relative;
  z-index: 2;
  // padding: 60px 30px;
  width: 100%;
  // margin-top: -20px;
  // margin: 50px;
}
.ondemand-points{
  font-size: 20px;
}

    .ondemand-btn {
        // width: 100%;
    font-size: 18px;
      max-width: fit-content;
      min-width: 100px;
      border-radius: 40px;
      // font-size: 10px;
      padding: 0 auto;
      font-family: "Roboto", sans-serif;
      background: linear-gradient(171deg, #0A47B9 0% , #763289 100%);
      color: white;
      border: none;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
      display: inline-flex;
      align-items: center;
      // gap: 10px;
      cursor: pointer;
      transition: all 0.3s ease-in-out;

      &:hover {
        transform: translateY(-3px) scale(1.03);
        box-shadow: 0 10px 25px rgba(10, 71, 185, 0.5);
      }
    }

    .ondemand-progress-bar {
      margin-top: 20px;
      width: 100%;
    }


    .ondemand-arrow{
          margin-left: 25px;   
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  gap: 10px;
    }


    .ondemand-btn:hover .ondemand-arrow{
      transform: rotate(13deg);
       margin-left: 50px;
       transition: all 0.3s ease-in-out;
      
    }
  }







@media (min-width: 1001px) {


  .ondemand-section {
  // margin-top: -150px;
  display: flex;
  position: relative;
  background-image: url('../../../../public/assets/images/onDemand-bg.svg');
  background-size: cover;  /* ensures entire image fits inside */
  background-position: center;
  background-repeat: no-repeat;

  // width: 100%;
  // min-height: 400px;
  min-height: 600px;
  color: #000;
  align-items: center;

  &::before {
    content: '';
    // position: absolute;
    inset: 0;
    z-index: 1;
  }
}
  .ondemand-section-content {
    // max-width: 1000px;
    text-align: left;

    .ondemand-title {
      font-family: 'Geist', sans-serif !important;
      font-size: 60px;
      font-weight: 300;
      margin-bottom: 10px;
      font-weight: 100;
    }

    .ondemand-subtitle {
      font-family: 'Geist', sans-serif !important;
      font-size: 55px;
      font-weight: 700;
      margin-bottom: 30px;
    }

    .ondemand-points {
      font-size: 14px;
      line-height: 1.6;
      margin-bottom: 30px;
      height: 100px;

      p {
        font-family: 'Outfit', sans-serif !important;
        margin-bottom: 12px;
        font-size: 24px;

        i {
          color: #000;
          margin-right: 8px;
          // font-size: 15px;
          height: 18px;
          width: 18px;
        }
      }
      
    }

    .ondemand-btn {
      margin-top: 20px;
      padding: 18px 35px;
      border-radius: 40px;
      font-size: 22px;
      font-family: "Roboto", sans-serif;
      background: linear-gradient(171deg, #0A47B9 0% , #763289 100%);
      color: white;
      border: none;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
      display: inline-flex;
      align-items: center;
      gap: 10px;
      cursor: pointer;
      transition: all 0.3s ease-in-out;
    }

    .ondemand-btn:hover{
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0px 8px 20px rgba(10, 71, 185, 0.4);
    }

     .ondemand-btn:hover .ondemand-arrow{
       transform: rotate(13deg);
        margin-left: 10px;
        transition: all 0.3s ease-in-out;
      
    }

    .ondemand-progress-bar {
      display: flex;
      margin-top: 40px;
      height: 4px;
      // background: linear-gradient(to right, #6A28BA 40%, #D1C4E9 40%);
      background-color:#D1C4E9;
      border-radius: 2px;
      z-index: 5;
    }
  }



  
  .text-overlay {
  position: relative;
  z-index: 2;
  // padding: 60px 30px;
  width: 100%;
  // margin-top: -20px;
  margin: 50px;
}

}