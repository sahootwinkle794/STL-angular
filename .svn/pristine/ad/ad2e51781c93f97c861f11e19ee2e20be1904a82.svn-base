.map-container {
  position: relative;
  background-color: #d8d5d5;
  width: 100%;
}

.map-container img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
}

/* Map Dots */
.map-dot {
  position: absolute;
  font-size: 0.9rem;
  font-weight: bold;
  color: #000;
}

.map-dot::before {
  content: '';
  display: inline-block;
  width: 10px;
  height: 10px;
 background: linear-gradient(132.06deg, #0A47B9 9.71%, #763289 76.97%);
  border-radius: 50%;
  margin-right: 6px;
}

/* Manually position dots (adjust as needed) */
.map-dot.usa {
  top: 35%;
  left: 12%;
}

.map-dot.dubai {
  top: 55%;
  left: 45%;
}

.map-dot.india {
  top: 48%;
  left: 75%;
}
