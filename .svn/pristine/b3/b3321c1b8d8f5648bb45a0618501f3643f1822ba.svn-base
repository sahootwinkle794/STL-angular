
<div class="confused-about">
  <!-- Left Side Image -->
  <div class="confused-img">
    <img [src]="imagePath" alt="Confused about" />
  </div>

  <!-- Right Side Content -->
  <div class="confused-content">
    <section class="confused-header">
      <h1>{{ mainHeading }}</h1>
    </section>

    <section class="confused-sub-title">
      <p class="heading-title" *ngFor="let sub of subTitles">{{ sub }}</p>
    </section>

    <section class="confused-btn">
      <button class="btn-confused">
        {{ buttonText }}
        <span class="arrow">â†’</span>
      </button>
    </section>
  </div>
</div>
