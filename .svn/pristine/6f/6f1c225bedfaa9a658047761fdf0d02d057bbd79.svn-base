.ready-sec {
  background: url('/assets/images/ready-bg.png') no-repeat center center;
  background-size: cover;
  padding: 80px 0;
  // color: #fff; // Optional: change text color for contrast
}


.foot-form{
  // margin-top: 150px;
}
.ready-sec .main-sec-head {
  color: #000000;
  font-weight: 100;
  font-size: 65px;
  padding: 0;
  background: transparent;
}

.ready-sec .main-sec-head span {
  font-weight: 700;
  display: block;
  font-size: 62px;
}

.ready-sec p {
  font-size: 27px;
  margin-bottom: 0;
  margin-top: 50px;
}

.form-box {
  padding: 70px 80px;
  border-radius: 20px;
  background: #EDEDED;
  border: 1px solid #DADADA;
}

.form-box label {
  margin-top: 26px;
  margin-bottom: 10px;
  font-family: "Exo 2", serif;
  font-size: 22px;
  color: #000000;
}

.form-box .form-control {
  background: #F7F7F7;
  border: 1px solid #D3D6DA;
  height: 65px;
  padding: 0 20px;
  line-height: 65px;
  border-radius: 10px;
}

.form-box textarea.form-control {
  height: 144px;
}

.form-box button {
  height: 65px;
  line-height: 65px;
  border-radius: 50px;
//   background: linear-gradient(180deg, #076689 0%, #032633 100%);
background: linear-gradient(135deg, #0A47B9 0%, #763289 100%);
  padding: 0 50px;
  color: #fff;
  font-size: 23px;
  margin-top: 20px;
  border: 1px solid #fff;
}

.form-box button:hover {
  color: #fff;
}

.form-box button img {
  margin-left: 30px;
  position: relative;
  top: -5px;
}


