.what-are-container {
//   padding: 40px 60px;
padding: 100px;
  background-color: #ffffff;
    border: #f15b2a 5px solid;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;

  .title-header {
    max-width: 1200px;
    margin: 0 auto;
  }

  .header-title {
    margin-bottom: 20px;
  }

  .heading {
    font-size: 2.2rem;
    color: #333333;
    margin: 0;
  }

  .heading strong {
    font-weight: 700;
    color: #000000;
  }

  .sub-titles {
    margin-bottom: 20px;
  }

  .sub-title {
    font-size: 1.2rem;
    color: #f15b2a; /* Orange-ish color as in the image */
    margin: 5px 0;
  }

  .marked-heading {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 40px;
  }

  .marked-title {
    flex: 1;
  }

  .marked-text {
    font-size: 1rem;
    color: #555555;
    margin: 10px 0;
    line-height: 1.6;
    border-left: 3px solid #f15b2a;
    padding-left: 10px;
    width: 800px;
  }

  .section-img {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }

  .section-img img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }
}
