.confused-about {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #0b1d36; /* Dark background */
  color: #ffffff;
//   padding: 40px 60px;
    padding: 90px;
  border-radius: 20px;

  .confused-img {
    flex: 0 0 20%; 
    max-width: 20%;
  }

  .confused-img img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }

  .confused-content {
    flex: 0 0 80%; 
    max-width: 80%;
    padding-left: 40px;
  }

  .confused-header h1 {
    font-size: 2.4rem;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .confused-sub-title .heading-title {
    font-size: 1rem;
    margin-bottom: 10px;
    line-height: 1.6;
    color: #dddddd;
  }

  .btn-confused {
    background-color: #f15b2a; /* Orange button */
    color: #ffffff;
    border: none;
    padding: 12px 24px;
    font-size: 1rem;
    border-radius: 30px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;

    .arrow {
      margin-left: 8px;
      font-size: 1.2rem;
    }

    &:hover {
      background-color: #d94d1d;
    }
  }
}
