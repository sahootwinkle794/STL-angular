.it-consultation {
  text-align: center;
  padding: 60px 40px;
  background-color: #f8f9fa;
}

.header {
  margin-bottom: 40px;
  text-align: center;
}

.header h2{
   font-size: 2.4rem;
  font-weight: 700;
  color: #0056b3;
  margin-bottom: 15px;
}
.header p {
  font-size: 1rem;
  color: #333;
  max-width: 800px;
  margin: 0 auto 40px auto;
  line-height: 1.6;
}

.services-grid {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.service-card {
  background-color: #ffffff;
  border: 2px solid transparent;
  border-radius: 15px;
  max-width: 260px;
  padding: 15px;
  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
  text-align: left;
  transition: transform 0.5s ease, box-shadow 0.5s ease, border 0.5s ease;
  position: relative;
  overflow: hidden;
}

.service-card img {
  width: 100%;
  height: auto;
  border-radius: 10px;
  transition: transform 0.5s ease, filter 0.5s ease;
}

.service-card .service-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #0056b3;
  margin-bottom: 8px;
  transition: color 0.3s ease;
}

.service-card .service-text {
  font-size: 0.95rem;
  color: #555555;
  line-height: 1.5;
}


.service-card:hover .service-title {
  color: #f15b2a;
}
// Service card hover effects
.service-card:hover {
  transform: perspective(800px) translateZ(80px) scale(1.1);
  z-index: 2;
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.35);
}

.service-card:hover ~ .service-card,
.service-card:has(~ .service-card:hover) {
  transform: perspective(800px) translateZ(-50px) scale(0.95);
  filter: brightness(0.8);
  border-image: linear-gradient(45deg, #f15b2a, #0056b3) 1;
  z-index: 1;
}


