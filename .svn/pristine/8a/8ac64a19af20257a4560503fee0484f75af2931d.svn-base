// the sectio for governance starts


.governance-section {
  // background: linear-gradient(90deg, #f5fcff, #e8f8ff);
  background-image: url('/assets/images/sakhyam/bg.png');
  padding: 6rem 4rem;
  //  text-align: center;
   background-size: 1600px 600px; /* width height */
  background-repeat: no-repeat;
  background-position: center;


  .governance-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: auto;
    gap: 2rem;
    flex-wrap: wrap;

    .governance-text {
      flex: 1;
      min-width: 300px;

      h2 {
        font-size: 3rem;
        font-weight: 150;
        line-height: 1.4;

        span {
          display: block;
          font-weight: 700;
        }
      }

      p {
        margin-top: 1rem;
        font-size: 1rem;
        line-height: 1.6;
        color: #333;
        font-style: normal;
      }
    }

    .governance-image {
      padding-top: 40px;
      flex: 1;
      text-align: center;

      img {
        max-width: 120%;
        height: auto;
        // box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
      }
    }
  }
}

/* ✅ Responsive for smaller screens */
@media (max-width: 768px) {
  .governance-section .governance-content {
    flex-direction: column;
    text-align: center;

    .governance-text {
      h2 {
        font-size: 1.8rem;
      }
    }
  }
}





// the sectio for the simplify starts

.society-management {
  padding: 20px;
  // background: linear-gradient(135deg, #f7fcff, #e8faff);
  background-image: url('/assets/images/sakhyam/Secondbg.png');
  // padding: rem 2rem;
  text-align: center;
   background-size: 1600px 600px; /* width height */
  background-repeat: no-repeat;
  background-position: center;
 

  .cards-wrapper {
    padding-top: 80px;
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;

    .card {
      padding-top: 100px;
      padding-left: 40px;
      padding-bottom: 40px;
      padding-bottom: 30px;
      background: #fff;
      // padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
      width: 48%;
      min-width: 300px;
      text-align: left;

      h3 {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        position: relative;

        &::after {
          content: '';
          display: block;
          width: 40px;
          height: 3px;
          background: #007bff;
          margin-top: 8px;
        }
      }

      p {
        font-size: 1rem;
        color: #444;
        margin: 1rem 0;
      }

      ul {
        padding-left: 1.2rem;
        li {
          margin: 0.5rem 0;
          font-size: 0.95rem;
          line-height: 1.4;
        }
      }
    }
  }

  .nav-arrows {
    margin-top: 2rem;
    display: flex;
    justify-content: left;
    gap: 0.4rem;
    padding-left: 140px;

    .arrow-btn {
      background: transparent;
      border: 2px solid #ff4b2b;
      color: #e6715f;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 1.2rem;
      cursor: pointer;
      transition: all 0.3s ease;

      &:hover,
      &.active {
        // background: #ff4b2b;
        // color: #fff;
         background: transparent;
        // background: #ff4b2b;
        color: #fd5d13;
      }
    }
  }
}

/* ✅ Responsive */
@media (max-width: 768px) {
  .society-management .cards-wrapper {
    flex-direction: column;
    align-items: center;

    .card {
      width: 90%;
    }
  }
}


// the section for the simplify ends

//  the sectio for the Key features starts 


.key-features {
  background: linear-gradient(135deg, #f8fcff, #eefaff);
  padding: 4rem 2rem;
 

  .features-header {
    h2 {
      padding-left: 120px;
       text-align: left;
      font-size: 2rem;
      font-weight: 400;
      margin-bottom: 2rem;

      span {
        font-weight: 700;
      }
    }
  }

  .features-wrapper {
    display: flex;
    text-align: left;
    // justify-content: space-between;
    flex-wrap: wrap;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;

    .feature {
      flex: 1;
      min-width: 180px;
      max-width: 200px;
      text-align: left;

      img {
        width: 50px;
        margin-bottom: 1rem;
      }

      h3 {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
      }

      p {
        font-size: 0.9rem;
        color: #555;
      }
    }
  }

  .nav-arrows {
    margin-top: 2rem;
    display: flex;
    justify-content: left;
    gap: 0.4rem;
    padding-left: 120px;

    .arrow-btn {
      background: transparent;
      border: 2px solid #ff4b2b;
      color: #ff4b2b;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 1.2rem;
      cursor: pointer;
      transition: all 0.3s ease;

      &:hover,
      &.active {
        background: transparent;
        // background: #ff4b2b;
        color: #fd5d13;
      }
    }
  }
}

/* ✅ Responsive */
@media (max-width: 900px) {
  .key-features .features-wrapper {
    justify-content: center;
  }
}

@media (max-width: 600px) {
  .key-features .features-wrapper {
    flex-direction: column;
    align-items: center;
  }
}


// the section for the FAQ starts 

.faq-section {
  // background: #f7f7f7;
  background-image: url('/assets/images/sakhyam/faqbg.pg');
  padding: 8rem 10rem;
  // width: 800px;
  // margin: auto;
  text-align: left;
  // display: flex;

  h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 2rem;
  }

  .faq {
    .faq-item {
      background: #fff;
      border-radius: 8px;
      margin-bottom: 1rem;
      overflow: hidden;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);

      &.open .faq-answer {
        max-height: 300px;
        padding: 1rem;
      }

      .faq-question {
        width: 100%;
        background: #fff;
        border: none;
        padding: 1rem;
        font-size: 1rem;
        text-align: left;
        font-weight: bold;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;

        &:hover {
          background: #f1f1f1;
        }
      }

      .faq-answer {
        max-height: 0;
        overflow: hidden;
        padding: 0 1rem;
        transition: all 0.3s ease;
        color: #555;
        font-size: 0.95rem;
      }
    }
  }
}
