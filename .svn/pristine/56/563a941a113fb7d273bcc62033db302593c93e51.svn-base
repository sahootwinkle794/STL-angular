.job-opening{
    margin-top: 100px;
}

.explore-header {
  background-color: #2c2f36;
  color: white;
  padding: 40px;
}

.explore-header p {
  margin: 0;
  font-size: 14px;
  color: #cccccc;
}

.explore-header h1 {
  margin: 10px 0 0;
  font-size: 32px;
}

.explore-container {
  display: flex;
  padding: 40px;
  background: #f8f9fa;
}

.filter-section {
  width: 30%;
  padding-right: 40px;
}

.filter-section input {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
}

.filter-category p {
  margin-bottom: 10px;
}

.filter-category button {
  display: block;
  width: 100%;
  background: white;
  border: 1px solid #ccc;
  padding: 8px;
  margin-bottom: 10px;
  text-align: left;
  cursor: pointer;
}

.job-list {
  width: 70%;
}

.job-box {
  background: white;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
  display: flex;
  justify-content: space-between;
  border: 1px solid #ddd;
}

.job-form-container {
  max-width: 500px;
  margin: auto;
  background: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
}

h2 {
  text-align: center;
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 15px;
}

label {
  font-weight: bold;
  margin-bottom: 5px;
  display: block;
}

input, button {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  background: #007bff;
  color: white;
  border: none;
  font-weight: bold;
}

// button:disabled {
//   background: #ccc;
// }

button:hover{
  cursor: pointer;
}
.submitted-data {
  margin-top: 20px;
  background: #f5f5f5;
  padding: 15px;
  border-radius: 6px;
}






// SEE MORE TRY 




.see-more-btn{
  display: flex;
  justify-content: center;
  align-items: center;

}
.Job {
  display: inline-block;
  padding: 10px 20px;
  background-color: #007BFF;
  color: white;
  text-align: center;
  border-radius: 4px;
  text-decoration: none;
}
.Job:hover {
  background-color: #0056b3;
}

//  DROPDOWN TRY 


.form-group {
  margin-bottom: 1.5rem;
  font-family: Arial, sans-serif;
}

.form-group label {
  display: block;
  font-weight: bold;
  margin-bottom: 0.5rem;
  color: #333;
}

.form-group select {
  width: 100%;
  padding: 0.6rem;
  font-size: 1rem;
  border: 1px solid #ccc;
  border-radius: 6px;
  background-color: #fff;
  color: #333;
  transition: all 0.3s ease;
  appearance: none; /* Removes default arrow for custom styling */
  background-image: url('data:image/svg+xml;utf8,<svg fill="%23333" height="24" width="24" viewBox="0 0 24 24"><path d="M7 10l5 5 5-5z"/></svg>');
  background-repeat: no-repeat;
  background-position: right 0.8rem center;
  background-size: 1rem;
}

.form-group select:hover {
  border-color: #888;
}

.form-group select:focus {
  border-color: #007BFF;
  outline: none;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
}


.breadcrumb a {
  text-decoration: none;
  color: #fff;

}
.breadcrumb a:hover{
  text-decoration: underline;
}

.breadcrumb:hover{
  cursor: pointer;
}