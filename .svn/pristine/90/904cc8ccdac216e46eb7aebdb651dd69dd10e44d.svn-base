img {
  height: auto;
  width: auto;
}

.industry-section {
  position: relative;
  width: 100%;
  height: 700px;
  overflow: hidden;
  z-index: 0;

  // default background
  &::before {
    content: "";
    position: absolute;
    inset: 0;
    background: url('../../../../public/assets/images/Education (2).png') center/cover no-repeat;
    z-index: -2;
    transition: background-image 0.5s ease-in-out;
    height: 100%;
    width: 100%;
  }
  &::after {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: -1;
  }

  &:has(.education:hover)::before {
    background-image: url('../../../../public/assets/images/Education (2).png');
  }
  &:has(.govt:hover)::before {
    background-image: url('../../../../public/assets/images/Govt Services.png');
  }
  &:has(.healthcare:hover)::before {
    background-image: url('../../../../public/assets/images/Healthcare.png');
  }
  &:has(.energy:hover)::before {
    background-image: url('../../../../public/assets/images/Energy & Utility.png');
  }
}

.content {
  position: absolute;
  z-index: 5;
  padding-left: 50px;
  display: flex;
  flex-direction: column;

  .subtitle {
    margin-top: 100px;
    font-family: 'Geist', sans-serif;
    font-size: 36px;
    font-weight: 500;
    letter-spacing: 0.12em;
    color: #FF7A33;
  }

  .title {
    font-family: 'Geist', sans-serif;
    font-size: 75px;
    font-weight: 500;
    color: #FFFFFF;
  }

  .description {
    font-family: 'Outfit', sans-serif;
    width: 684px;
    font-size: 23px;
    font-weight: 400;
    color: #FFFFFF;
  }
}

.slider {
  display: flex;
  height: 100%;
  width: 100%;
  z-index: 1;

  &:hover .zone {
    flex: 1;
    filter: blur(2px);
    transition: all 0.4s ease-in-out;
  }

  .zone:hover {
    filter: blur(0);
    z-index: 3;
    cursor: pointer;
  }

  .zone {
    flex: 1;
    position: relative;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
    flex-direction: column;
    padding: 40px;
    border-right: 1px solid #fff;
    overflow: hidden;
    transition: all 0.4s ease-in-out;

    &::after {
      content: "";
      position: absolute;
      inset: 0;
      background-color: rgba(0, 0, 0, 0.6);
      // filter: blur(9.7%);
      opacity: 0;
      transition: opacity 0.5s ease;
      z-index: 1;
    }

    &:hover::after {
      opacity: 1;
    }

    h2, p, .learn-more {
      position: relative;
      z-index: 2;
    }

    h2 {
      font-size: 45px;
      font-weight: 600;
      color: #fff;
      font-family: 'Geist', sans-serif;
      margin-bottom: 10px;
      transition: all 0.4s ease;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    p {
      font-family: 'Outfit', sans-serif;
      font-size: 23px;
      font-weight: 400;
      color: #ccc;
      max-height: 0;
      opacity: 0;
      overflow: hidden;
      transition: all 1s ease;
      margin-bottom: 0;
    }

    .learn-more {
      opacity: 0;
      max-height: 0;
      overflow: hidden;
      transition: all 1s ease;
      font-family: 'Geist', sans-serif;
      margin-top: 20px;
      padding: 12px 20px;
      background: linear-gradient(180deg, #FD8033 -66.19%, #EC292A 164.17%);
      color: #fff;
      border-radius: 25px;
      text-decoration: none;
      font-size: 20px;
      display: inline-block;
      margin-bottom: 40px;
      position: relative;
      font-weight: 600;
      letter-spacing: 0.5px;
      transition:
        transform 0.25s ease-out,
        box-shadow 0.35s ease,
        background-position 0.6s ease,
        border-radius 0.4s ease;
      background-size: 200% 200%;

      &:hover {
        transform: translateY(-5px) scale(1.07) rotateX(6deg) rotateY(-6deg);
        box-shadow:
          0 15px 30px rgba(236, 41, 42, 0.35),
          0 0 30px rgba(253, 128, 51, 0.4),
          inset 0 0 12px rgba(255, 255, 255, 0.2);
        background-position: 100% 0;
        border-radius: 35px;
      }
    }

    &:hover p,
    &:hover .learn-more {
      max-height: 500px;
      opacity: 1;
    }
  }
}
