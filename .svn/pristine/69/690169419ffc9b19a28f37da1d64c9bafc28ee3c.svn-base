img{
  height:auto;
  width: auto;
}

.industry-section {
  // margin-top: 200px;
  position: relative;
  width: 100%;
  height: 700px;
  overflow: hidden;
  border-top-left-radius: 65px;
  border-top-right-radius: 65px;
  z-index: 0;

  &::before {
    content: "";
    position: absolute;
    inset: 0;
    background: url('/assets/images/our-zone-bg.png') no-repeat center center / cover;
    z-index: -1;
  }
}

.content {
  position: absolute;
  z-index: 2;
  padding-left: 150px;
  display: flex;
  flex-direction: column;

  .subtitle {
    margin-top: 100px;
    font-family: 'Geist', sans-serif;
    font-size: 36px;
    font-weight: 500;
    letter-spacing: 0.12em;
    color: #FF7A33;
  }

  .title {
    font-family: 'Geist', sans-serif;
    font-size: 75px;
    font-weight: 500;
    margin-top: 10px;
    color: #FFFFFF;
  }

  .description {
    font-family: 'Outfit', sans-serif;
    width: 684px;
    font-size: 23px;
    font-weight: 400;
    margin-top: 20px;
    color: #FFFFFF;
  }
}

.slider {
  display: flex;
  height: 100%;
  width: 100%;
  z-index: 1;

  &:hover .zone {
    flex: 1;
    filter: blur(2px);
    transition: all 0.4s ease-in-out;
  }

  .zone:hover {
    filter: blur(0);
    // flex: 2;
    z-index: 3;
    cursor: pointer;
  }

  .zone {
    flex: 1;
    position: relative;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
    flex-direction: column;
    padding: 40px;
    background: no-repeat center center;
    background-size: cover;
    border-right: 1px solid #fff;
    overflow: hidden;
    transition: all 0.4s ease-in-out;

    // Overlay
    &::after {
      content: "";
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background-color: rgba(0, 0, 0, 0.4);
      opacity: 0;
      transition: opacity 0.5s ease;
      z-index: 1;
    }

    &:hover::after {
      opacity: 1;
    }

    h2, p, .learn-more {
      position: relative;
      z-index: 2;
    }

    h2 {
      font-size: 45px;
      font-weight: 600;
      color: #fff;
      font-family: 'Geist', sans-serif;
      margin-bottom: 10px;
      transition: all 0.4s ease;
    }

    p {
      font-family: 'Outfit', sans-serif;
      font-size: 23px;
      font-weight: 400;
      color: #ccc;
      max-height: 0;
      opacity: 0;
      overflow: hidden;
      transition: all 1s ease;
      margin-bottom: 0;
    }

    .learn-more {
      opacity: 0;
      max-height: 0;
      overflow: hidden;
      transition: all 1s ease;
      font-family: 'Geist', sans-serif;
      margin-top: 20px;
      padding: 12px 20px;
      // background-color: transparent;
      background: linear-gradient(180deg, #FD8033 -66.19%, #EC292A 164.17%);
      // border: 2px solid #fff;
      color: #fff;
      border-radius: 25px;
      text-decoration: none;
      font-size: 20px;
      display: inline-block;

      &:hover {
        // color: #FF5E24;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        background-color: #fff;
      }
    }

    &:hover p,
    &:hover .learn-more {
      max-height: 500px;
      opacity: 1;
    }
  }
}












