     <section class="banner d-flex flex-column position-relative">
      <video width="100%" height="1080px" autoplay loop muted class="bg-video">
    <ng-container *ngFor="let source of videoSources">
      <source [src]="source.src" [type]="source.type">
    </ng-container>
    Your browser does not support the video tag.
  </video>
      <div class="container-fluid d-flex mt-2">
        <div class="row">
          <!-- <div class="col-md-6"> -->
            <div class="banner-content">
              <h1 class="banner-title ">Solving Problems With </h1>
              <h2 class="banner-subtitle">Versatile Technology</h2>
              <h3 class="banner-subtitle">Solutions.</h3>

                <!-- Updated HTML -->
                    <div class="banner-subtitle-wrapper">
                      <div class="banner-subtitle-container" [style.transform]="transformStyle">
                        <h4
                          class="banner-semi-subtitle"
                          *ngFor="let subtitle of subtitles"
                        >
                          {{ subtitle }}
                        </h4>
                      </div>
                    </div>
            </div>
            <div class="banner-btn">
              <button class="btn btn-service">View Our Services<img src="/assets/images/btn-arrow.svg" alt="arrow" class="banner-arrow"></button>
              <button class="btn btn-Case">Check Our Case Studies<img src="/assets/images/btn-arrow.svg" alt="arrow" class="banner-arrow"></button>
            </div>
          <!-- </div> -->
        </div>
      </div>
    </section>
