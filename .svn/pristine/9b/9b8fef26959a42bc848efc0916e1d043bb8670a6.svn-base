//  to import the FOnt style in the SCSS
@import url('https://fonts.googleapis.com/css2?family=Geist:wght@100..900&family=Outfit:wght@100..900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap');
//  this is the banner section


/* Background video */
.bg-video {
  position: absolute;
  top: 0;
  left: 0;
  height: 120%;
  width: 100%;
  object-fit: cover;
  z-index: 0;
  pointer-events: none;
  transform: scaleX(-1);
  object-fit: cover;
  //  transform: scaleX(-1) scale(1); 
  transform-origin: center;
  transition: transform 0.5s ease;
}


//  new added section for the banner 
.banner {
  position: relative;
  width: 100%;             
  max-width: 1920px;       
  aspect-ratio: 1920 / 930; 
  overflow: hidden;
  margin: 0 auto;
}

/* Banner content */
.banner-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  // margin-top: 20vh;
  margin-top: 120px;
  padding-left: 5vw;
  opacity: 0;
  transform: translateX(100%);
  animation: slideInFromRight 1s forwards;
  animation-delay: 0.5s;
}

/* Slide-in animation */
@keyframes slideInFromRight {
  0% {
    opacity: 0;
    transform: translateX(100%);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Titles */
.banner-title {
  font-family: 'Geist', sans-serif;
  font-size: 80px;
  font-weight: 250;
}

.banner-subtitle {
  font-family: 'Geist', sans-serif;
  font-size: 80px;
  opacity: 0;
  transform: translateX(100%);
  animation: slideInFromRight 1s forwards;
  animation-delay: 0.6s;
  font-weight: 600;
}

.banner-subtitle-wrapper {
  height: 48px; 
  overflow: hidden;
  position: relative;
  cursor: pointer;
}

.banner-subtitle-container {
  display: flex;
  flex-direction: column;
  transition: transform 0.6s ease-in-out;
  will-change: transform;
}

.banner-semi-subtitle {
  font-family: 'Geist', sans-serif;
  font-size: 40px;
  color: #623692;
  font-weight: 400;
  margin: 0;
  line-height: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  white-space: nowrap;
}

/* Buttons */
.banner-btn {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40px;
  gap: 20px;
  z-index: 1;
  padding-left: 5vw;
  transform: translateX(100%);
  animation: slideInFromRight 1s forwards;
  animation-delay: 0.9s;
}

@keyframes slideInFromRight {
  0% {
    opacity: 0;
    transform: translateX(100%);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.btn-service,
.btn-Case {
  border-radius: 50px;
  height: 60px;
  padding-left: 25px;
  font-family: "Outfit", sans-serif;
  font-size: 20px;
  font-weight: 500;
  text-align: left;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  display: flex;
  align-items: center;
  transition: all 0.8s ease;
}

.btn-service {
  background: linear-gradient(150deg,#FD8033 0%, #EC292A 100%);
  color: #FFFFFF;

}

.btn-Case {
  background: linear-gradient(150deg,#0A47B9 0%, #763289 100%);
  color: #FFFFFF;
}

/* Arrow Section */
.banner-arrow {
  display: flex;
  justify-content: space-between;
  gap: 30px;
  margin-left: 30px;
  align-items: center;
  transition: all 0.3s ease;
}


.btn-service:hover {
  transform: translateY(-5px) scale(1.05); // lift effect
  box-shadow: 0px 8px 20px rgba(253, 128, 51, 0.4);
}
.btn-Case:hover {
  transform: translateY(-5px) scale(1.05);
  box-shadow: 0px 8px 20px rgba(10, 71, 185, 0.4);
}



// new hover section added

.btn-service:hover .banner-arrow,
.btn-Case:hover .banner-arrow {
  transform: rotate(13deg);
  margin-left: 40px;
}



// Try responsive section

/* Small screens (phones) */
@media (max-width: 576px) {
  .banner-title {
    font-size: 32px;
    text-align: center;
  }
  .banner-subtitle {
    font-size: 28px;
    text-align: center;
  }
  .banner-semi-subtitle {
    font-size: 18px;
    line-height: 28px;
  }
  .banner-content {
    align-items: center;
    margin-top: 60px;
    padding-left: 0;
    text-align: center;
  }
  .banner-btn {
    justify-content: center;
    padding-left: 0;
    gap: 12px;
  }
  .btn-service,
  .btn-Case {
    height: 45px;
    font-size: 14px;
    padding: 0 15px;
  }
  .banner-arrow {
    margin-left: 10px;
    gap: 10px;
  }
}

/* Medium screens (tablets) */
@media (min-width: 577px) and (max-width: 768px) {
  .banner-title { font-size: 48px; }
  .banner-subtitle { font-size: 40px; }
  .banner-semi-subtitle { font-size: 22px; }
  .btn-service, .btn-Case {
    height: 50px;
    font-size: 16px;
  }
}

/* Large tablets / small laptops */
@media (min-width: 769px) and (max-width: 992px) {
  .banner-title { font-size: 60px; }
  .banner-subtitle { font-size: 50px; }
  .banner-semi-subtitle { font-size: 28px; }
  .btn-service, .btn-Case {
    height: 55px;
    font-size: 18px;
  }
}

/* Desktops */
@media (min-width: 993px) {
  .banner-title { font-size: 80px; }
  .banner-subtitle { font-size: 80px; }
  .banner-semi-subtitle { font-size: 40px; }
}
