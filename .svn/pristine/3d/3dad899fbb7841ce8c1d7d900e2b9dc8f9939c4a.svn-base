.pholder {
  font-family: "Oswald", sans-serif;
  font-weight: 400;
  font-size: 100px;
  position: absolute;
  // letter-spacing: 20px;
  text-transform: uppercase;
  color: #eff0f1d9;
  text-decoration: uppercase;
  top: -78px;
  z-index: -1;
}




.pro-plat #panel {
  width: 100%;
  // display: grid;
  display: flex;
  position: relative;
  // padding: 0px 200px 0px 200px;
  /* padding-left: 200px;
  padding-right: 200px; */
  .btn{
    text-transform: none;

  }
.btn {
  background: none;
  border: 1px solid transparent;
  outline: none;
  box-shadow: none;
  // padding: 0;
  padding: 10px;
    filter: contrast(0.1);
    margin: 80px;
}



.btn:active,
.btn:focus {
  background: none !important;
  color: inherit !important;
  border-color: transparent !important;
  box-shadow: none !important;
  outline: none !important;
  text-decoration: none !important;
}
.btn:hover{
  filter: contrast(0.9);
  cursor: pointer;
  
}


.btn:focus,
.btn:active,
.btn:focus-visible {
  border: 1px solid transparent !important;
  outline: none !important;
  box-shadow: none !important;
}


.btn::before,
.btn::after {
  content: none !important;
  display: none !important;
}

}

.panel p {
  font-size: 30px;
}

.proPlat-box {
  position: sticky;
  top: 14%;
  margin: 50px 0;
  padding: 40px;
  border-radius: 8px;
  overflow: hidden;
}

.proPlat-box h4 {
  font-size: 30px !important;
}

.proPlat-box img {
  width: 100%;
}

.proPlat-box-bg {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}

.pro-plat-sec {
  padding: 100px 0;
}

.pro-plat {
  margin-top: 20px;
}

